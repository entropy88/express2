
<h1>Редактирай справка</h1>
<div class="form">
    <form action="/edit/{{ref.id}}" method="POST">
        <label for="title">Тема</label>
        <input type="text" id="title" name="title" value="{{ref.title}}">

        <label for="languages">Езици</label>
        <input type="text" id="languages" name="languages" value="{{ref.languages}}">

        <label for="refType">Тип:</label>
        <select id="refType" name="refType" >
            <option value="Бакалавърска дипломна работа"{{#if selectedRefType.bt}} selected="selected" {{/if}}>Бакалавърска дипломна работа</option>
            <option value="Магистърска дипломна работа"{{#if selectedRefType.mt}} selected="selected" {{/if}}>Магистърска дипломна работа </option>
            <option value="Дисертация"{{#if selectedRefType.phd}} selected="selected" {{/if}}>Дисертация</option>
            <option value="Друго"{{#if selectedRefType.oth}} selected="selected" {{/if}}>Друго </option>
        </select>

        </select>

        <label for="contentUrl">Линк</label>
        <input type="text" id="contentUrl" name="contentUrl" value={{ref.contentUrl}}>
        <label for="recipient">Получател</label>
        <input type="text" id="recipient" name="recipient" value={{ref.recipient}}>
        <label for="worker">Служител</label>
        <input type="text" id="worker" name="worker" value={{ref.worker}}>

        <label for="classification">Класификация: </label>
        <select id="classification" name="classification">

        <option value="0. Общ отдел" {{#if selectedClassif.obsht}} selected="selected" {{/if}}>0. Общ отдел</option>
        <option value="1. Философия"{{#if selectedClassif.filos}} selected="selected" {{/if}}>1. Философия</option>
        <option value="2. Религия"{{#if selectedClassif.relig}} selected="selected" {{/if}}>2. Религия</option>
        <option value="3. Обществени науки"{{#if selectedClassif.obshtestven}} selected="selected" {{/if}}>3. Обществени науки</option>
        <option value="5. Математика. Естествени науки"{{#if selectedClassif.matem}} selected="selected" {{/if}}>5. Математика. Естествени науки</option>
        <option value="61. Медицина" {{#if selectedClassif.medic}} selected="selected" {{/if}}>61. Медицина</option>
        <option value="62. Техника"{{#if selectedClassif.tehnik}} selected="selected" {{/if}}>62. Техника</option>
        <option value="63. Селско стопанство" {{#if selectedClassif.selsk}} selected="selected" {{/if}}>63. Селско стопанство</option>
        <option value="64-69. Промишленост" {{#if selectedClassif.promish}} selected="selected" {{/if}}>64-69. Промишленост</option>
        <option value="793-799. Спорт"{{#if selectedClassif.sport}} selected="selected" {{/if}}>793-799. Спорт</option>
        <option value="7. Изкуство"{{#if selectedClassif.izkust}} selected="selected" {{/if}}>7. Изкуство</option>
        <option value="80. Езикознание"{{#if selectedClassif.ezikoz}} selected="selected" {{/if}}>80. Езикознание</option>
        <option value="82. Литературознание"{{#if selectedClassif.literat}} selected="selected" {{/if}}>82. Литературознание</option>
        <option value="9. История"{{#if selectedClassif.istor}} selected="selected" {{/if}}>9. История</option>
        <option value="91. География. Пътешествия" {{#if selectedClassif.georg}} selected="selected" {{/if}}>91. География. Пътешествия</option>


        </select>

        <label for="refStatus">Статус : {{ref.refStatus}}</label><p></p>
        <select id="refStatus" name="refStatus">
            <option value="Приета">Приета</option>
            <option value="Изпълнена">Изпълнена</option>
            <option value="Взета">Взета</option>

        </select>
        <input type="submit" value="Редактирай">
    </form>
</div>